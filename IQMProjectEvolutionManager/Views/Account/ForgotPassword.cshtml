@model ForgotPasswordModel

@{
    ViewBag.Title = "Forgot Password";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>Fill in user details.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <p>@ViewBag.Message</p>

    <fieldset>
        <legend>User details</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
        </ol>
        <input id="submit-button" type="submit" value="Reset" />
        <input id="back-to-login-user-button" type="button" value="Back to login" onclick="location.href='@Url.Action("Login")'" style="float: right;" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}